    <!-- SCRIPTS -->
    <script>
        // CLOCK
        setInterval(() => {
            document.getElementById('clock').innerText = new Date().toISOString().replace('T', ' ').split('.')[0] + ' UTC';
        }, 1000);

        // CHART INIT
        const ctx = document.getElementById('pnlChart').getContext('2d');
        const pnlChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    label: 'Cumulative PnL ($)',
                    data: [],
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true,
                    pointRadius: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { display: false },
                    y: { grid: { color: '#1e293b' }, ticks: { color: '#64748b' } }
                }
            }
        });

        async function updateData() {
            try {
                // 1. STATS
                const resStats = await fetch('/api/stats');
                const stats = await resStats.json();
                document.getElementById('equity').innerText = `$${parseFloat(stats.equity).toFixed(2)}`;
                document.getElementById('open-count').innerText = stats.open_positions.length;
                
                // 2. WATCHLIST
                const resWl = await fetch('/api/watchlist');
                const wl = await resWl.json();
                document.getElementById('wl-count').innerText = `${wl.length} Pairs`;
                
                const wlContainer = document.getElementById('watchlist-container');
                wlContainer.innerHTML = '';
                
                if (wl.length === 0) {
                    wlContainer.innerHTML = '<div class="text-center text-gray-600 mt-10">Scanning...</div>';
                } else {
                    wl.forEach(item => {
                        const distPct = item.dist_pct || 0;
                        const progressColor = distPct < 0.2 ? 'bg-red-500' : (distPct < 1.0 ? 'bg-yellow-500' : 'bg-blue-600');
                        
                        wlContainer.innerHTML += `
                        <div class="bg-[#0f172a] border border-gray-800 p-4 rounded-lg hover:border-blue-500/50 transition relative overflow-hidden group">
                            <div class="absolute top-0 left-0 w-1 h-full ${item.direcao === 'SHORT' ? 'bg-red-500' : 'bg-green-500'}"></div>
                            <div class="flex justify-between items-start mb-2 pl-3">
                                <div>
                                    <h4 class="font-bold text-white text-lg">${item.symbol}</h4>
                                    <span class="text-xs text-gray-500 bg-gray-900 px-1.5 py-0.5 rounded">${item.timeframe}</span>
                                </div>
                                <div class="text-right">
                                    <div class="${item.direcao === 'SHORT' ? 'text-red-400' : 'text-green-400'} font-bold text-sm tracking-wider">${item.direcao}</div>
                                    <div class="text-xs text-gray-500">${item.padrao}</div>
                                </div>
                            </div>
                            <div class="pl-3 mt-3">
                                <div class="flex justify-between text-xs text-gray-400 mb-1">
                                    <span>Distance</span>
                                    <span>${distPct}%</span>
                                </div>
                                <div class="w-full bg-gray-800 rounded-full h-1.5">
                                    <div class="${progressColor} h-1.5 rounded-full transition-all duration-1000" style="width: ${Math.max(5, 100 - (distPct*20))}%"></div>
                                </div>
                                <div class="flex justify-between text-[10px] text-gray-600 mt-2 font-mono">
                                    <span>TRIG: ${item.neckline}</span>
                                    <span>TP: ${item.target}</span>
                                </div>
                            </div>
                        </div>`;
                    });
                }

                // 3. LOGS
                const resLogs = await fetch('/api/logs');
                const logs = await resLogs.json();
                const logBox = document.getElementById('logs');
                logBox.innerHTML = logs.map(l => {
                    const color = l.includes('ERROR') ? 'text-red-500' : (l.includes('CONFIRMADO') ? 'text-yellow-400' : 'text-green-500');
                    return `<div class="${color} hover:bg-white/5 px-1">${l}</div>`;
                }).join('');
                logBox.scrollTop = logBox.scrollHeight;

                // 4. HISTORY (CHART)
                const resHist = await fetch('/api/history');
                const history = await resHist.json();
                
                // Calculo Winrate & PnL Curve
                let wins = 0;
                let cumulative = 0;
                const pnlData = history.map((trade, i) => {
                    // SimulaÃ§Ã£o simples de PnL baseada em status (precisariamos do PnL real no json de history para ser exato)
                    // Por enquanto, vamos desenhar "Flat" atÃ© termos dados reais de fechamento.
                    // Se o trade tiver 'pnl_realized', usamos.
                    const pnl = trade.pnl_realized || 0; 
                    if (pnl > 0) wins++;
                    cumulative += pnl;
                    return cumulative;
                });
                
                // Mock de Winrate se nÃ£o tiver histÃ³rico suficiente fechado
                if (history.length > 0) {
                     // document.getElementById('winrate').innerText = ((wins / history.length) * 100).toFixed(0) + '%';
                }

                // Atualiza Chart apenas se mudou tamanho
                if (pnlChart.data.labels.length !== history.length) {
                    pnlChart.data.labels = history.map((_, i) => i + 1);
                    pnlChart.data.datasets[0].data = pnlData;
                    pnlChart.update();
                }

            } catch(e) { console.error(e); }
        }

        setInterval(updateData, 2000); // Fast Update
        updateData();
    </script>
    </div>
</body>
</html>
